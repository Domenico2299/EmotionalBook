<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/come_ti_senti_oggi"
        android:textSize="18dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <Button
        android:id="@+id/buttonToAdvices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consigli_di_oggi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.98" />

    <com.example.emotionalbook.ToggleButtonGroupTableLayout
        android:id="@+id/radGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow>

            <RadioButton
                android:id="@+id/radioButtonSad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:button="@null"
                android:drawableTop="@drawable/emoji_sad"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle" />


            <RadioButton
                android:id="@+id/radioButtonStressed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:button="@null"
                android:drawableTop="@drawable/emoji_stress"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle" />

        </TableRow>

        <TableRow>

            <RadioButton
                android:id="@+id/radioButtonHappy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:button="@null"
                android:drawableTop="@drawable/emoji_happy"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle" />

            <RadioButton
                android:id="@+id/radioButtonAngry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:button="@null"
                android:drawableTop="@drawable/emoji_angry"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle" />

        </TableRow>
    </com.example.emotionalbook.ToggleButtonGroupTableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radGroup1">

        <SeekBar
            android:id="@+id/emotseekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="10" />

        <TextView
            android:id="@+id/textViewSeekBar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:text="@string/Invia"
        app:layout_constraintBottom_toTopOf="@+id/buttonToAdvices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radGroup1"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/buttonStatistiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistiche"
        app:layout_constraintBottom_toTopOf="@+id/buttonToAdvices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSend"
        app:layout_constraintVertical_bias="0.666" />


</androidx.constraintlayout.widget.ConstraintLayout>